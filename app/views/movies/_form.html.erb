<%= form_with(model: movie, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> Filme não pode ser salvo:</h2>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="box box-info">
            <div class="box-header">
              <h3 class="box-title">Descrição filme</h3>
            </div>
            <div class="box-body">
              <!-- Color Picker -->
              <div class="form-group">
                <label>Nome:</label>
                <%= form.text_field :name %>
              </div>
              <!-- /.form group -->

              <!-- Color Picker -->
              <div class="form-group">
                <label>Gênero:</label>
                  <%= form.number_field :genre_id %>
                <!-- /.input group -->
              </div>
              <!-- /.form group -->

              <!-- time Picker -->
              <div class="bootstrap-timepicker">
                <div class="form-group">
                  <label>Preço do aluguel:</label>
                  <%= form.text_field :rent_price %>
                  <!-- /.input group -->
                </div>
                <!-- /.form group -->
              </div>

              <div class="actions">
                <%= form.submit %>
              </div>
            </div>
            <!-- /.box-body -->
          </div>

<% end %>
